<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="5dp"
    >

    <ImageView
        android:id="@+id/rowMedicalOrderImage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/no_image_available"/>
    <TextView
        android:id="@+id/rowMedicalOrderDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rowMedicalOrderImage"
        android:text="2125"
        android:layout_marginTop="5dp"
        android:textSize="12sp"
        />
    <TextView
        android:id="@+id/rowMedicalOrderNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rowMedicalOrderDate"
        android:text="2125"
        android:layout_marginTop="8dp"
        android:textSize="15sp"
        android:textColor="@color/black"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/rowMedicalOrderNote"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#ccc"
        android:visibility="gone"
        />
</RelativeLayout>